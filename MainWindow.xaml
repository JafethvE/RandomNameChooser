<Window x:Class="RandomNameChooser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomNameChooser"
        mc:Ignorable="d"
        Title="MainWindow" Height="430" Width="250"
        ResizeMode="NoResize">
    <Grid Margin="10,0,10,10">
        <TextBlock x:Name="NamesTextBlock" HorizontalAlignment="Center" Margin="0,10,0,0" Text="Names" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center"/>
        <TextBox x:Name="NamesTextBox" HorizontalAlignment="Center" Margin="0,31,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" Height="293" TextAlignment="Left" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" ToolTip="Fill in all names seperated by newlines."/>
        <TextBlock x:Name="ChosenNameTextBlock" HorizontalAlignment="Center" Margin="0,329,0,0" Text="" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Height="22" Width="202"/>
        <Button x:Name="ChooseNameButton" Content="Choose" HorizontalAlignment="Right" Margin="0,356,10,0" VerticalAlignment="Top" Click="ChooseNameButton_Click" ToolTip="Choose a random name"/>
    </Grid>
</Window>
